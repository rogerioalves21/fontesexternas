<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>fontes-externas-ear-esb</artifactId>
    <name>fontes-externas-ear-esb</name>
    <description>fontes-externas-ear-esb</description>
    <packaging>ear</packaging>

    <parent>
        <groupId>br.com.sicoob.gesic</groupId>
        <artifactId>fontes-externas</artifactId>
        <version>0.0.0.1-SNAPSHOT</version>
    </parent>

    <build>
        <finalName>fontes-externas-ear-esb</finalName>
        <plugins>
            <plugin>
                <artifactId>maven-ear-plugin</artifactId>
                <configuration>
                    <defaultLibBundleDir>lib</defaultLibBundleDir>
                    <version>5</version>
                    <modules>
                        <ejbModule>
                            <groupId>br.com.sicoob.gesic</groupId>
                            <artifactId>fontes-externas-ejb</artifactId>
                            <bundleFileName>fontes-externas-ejb.jar</bundleFileName>
                        </ejbModule>
                        <webModule>
                            <groupId>br.com.sicoob.gesic</groupId>
                            <artifactId>fontes-externas-war</artifactId>
                            <bundleFileName>fontes-externas-war.war</bundleFileName>
                            <contextRoot>/fontes-externas</contextRoot>
                            <unpack>false</unpack>
                        </webModule>
                    </modules>
                    <archive>
                        <manifestEntries>
                            <Dependencies>br.com.sicoob.framework export annotations, com.ibm.mq.adapter export annotations, br.com.sicoob.terceiros export annotations, org.jboss.remote-naming export</Dependencies>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>br.com.sicoob.gesic</groupId>
            <artifactId>fontes-externas-ejb</artifactId>
            <version>${project.version}</version>
            <type>ejb</type>
            <exclusions>
                <exclusion>
                    <groupId>*</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>br.com.sicoob.gesic</groupId>
            <artifactId>fontes-externas-war</artifactId>
            <version>${project.version}</version>
            <type>war</type>
            <exclusions>
                <exclusion>
                    <groupId>*</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <!-- Terceiros -->
